<h1>Game Studios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_studios.each do |game_studio| %>
      <tr>
        <td><%= game_studio.name %></td>
        <td><%= game_studio.location %></td>
         <td><%= game_studio.id %></td>
        <td><%= link_to 'Show', game_studio %></td>
        <td><%= link_to 'Edit', edit_game_studio_path(game_studio) %></td>
        <td><%= link_to 'Destroy', game_studio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Studio', new_game_studio_path %>
