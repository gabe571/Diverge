<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release date</th>
       <th>Game Id</th>
      <th>Game Studio</th>
      <th>Located</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.release_date %></td>
         <td><%= game.id %></td>
        <td><%= game.game_studio.name %></td>
        <td><%= game.game_studio.location %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
