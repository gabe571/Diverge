<h1>Reviews</h1>
<table class="table table-striped table-bordered table-hover">
   <thead class="thead-dark">
  <thead>
    <tr>
      <th>Game</th>
      <th>Review</th>
      <th>Raiting<th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.game.name %></td>
        <td><%= review.reviewed_game %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Edit', edit_game_review_path(:game_id, review)%><td>
        <td><%= link_to 'Destroy', game_review_path(:game_id, review), method: :delete, data: { confirm: 'Are you sure?' }
        %> </td>
      </tr> 
    <% end %>
 
  </tbody>
</table>

<br>
<%= link_to 'Back', games_path %> |
<%= link_to "New Review", new_game_review_path %>



